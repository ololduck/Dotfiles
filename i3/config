# Misc (non workspace-related?)
for_window [class="Pavucontrol"] floating enable

# Startup Programs
exec --no-startup-id urxvtd -f -o &> ~/.urxvtd.log   # Terminal daemon.
exec --no-startup-id dunst &                    # Notification daemon
exec --no-startup-id nm-applet              	# wifi management
exec --no-startup-id dropboxd &        	        # dropbox (do we reaaaaally need this?)
